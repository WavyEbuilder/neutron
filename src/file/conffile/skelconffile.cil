(block skel

  (filecon "/etc/skel" dir file_context)
  (filecon "/etc/skel/.*" any file_context)

  (macro conf_file_type_transition_file ((type ARG1))
         (call .conf.file_type_transition
               (ARG1 file dir "skel")))

  (blockinherit .file.conf.template))

(in file.unconfined

    (call .skel.conf_file_type_transition_file (typeattr)))
